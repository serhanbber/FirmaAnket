@model FirmaAnket.Models.QuestionDTO
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="card">
    <div class="card-body">
        <div class="card-title">Soru Ekleme Sayfası</div>
        <hr>
        @using (Html.BeginForm("Create", "Question", FormMethod.Post))
        {
            <form>
                <div class="form-group">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.LabelFor(model => model.Question, htmlAttributes: new { @class = "control-label col-md-2" })
                    @Html.EditorFor(model => model.Question, new { htmlAttributes = new { @class = "form-control" ,type="area",maxlenght="250"} })
                    @Html.ValidationMessageFor(model => model.Question, "", new { @class = "text-danger" })
                </div>
              
                <div class="form-group">
                    <button type="submit" class="btn btn-success shadow-success px-5"><i class="icon-lock"></i> Kaydet</button>
                </div>
            </form>
        }


    </div>
</div>

